@model IEnumerable<IndexViewModel>
@{
 ViewData["Title"] = "Home Page";
 var games = Model.ToList();
}
@if (!games.Any())
{
	<div class="mt-4 p-5 bg-light">
		<h1 class="display-4">Welcome to Update!</h1>
		<p class="lead">
			Currently we dont have any games in our sistem, why not add the first one?
		</p>
		<hr class="my-4">
		<p class="lead">
			@if (User.Identity?.IsAuthenticated ?? false)
			{
				<a asp-controller="Game" asp-action="Add" class="btn btn-primary
				btn-lg"
				role="button">Add Game</a>
			}
		</p>
	</div>
}
<div class="mb-5"></div>
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
	<div class="carousel-inner">
		@for (int i = 0; i < games.Count(); i++)
		{
		var game = games[i];
			<div class="carousel-item @(i == 0 ? "active" : string.Empty)">
				<img class="d-block w-100" style="height:500px"
					src="@game.ImageURL" alt="@game.Name">
					<div class="carousel-caption d-none d-md-block">
						<h5>
							<a class="btn btn-primary" asp-controller="Game" aspaction="Details"
							asp-route-id="@game.Id"> @game.Name</a>
						</h5>
					</div>
			</div>
		}
	</div>
	<button class="carousel-control-prev" type="button" data-bstarget="#carouselExampleControls" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bstarget="#carouselExampleControls" data-bs-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Next</span>
	</button>
</div>
